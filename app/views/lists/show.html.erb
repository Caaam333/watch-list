
<div class="container mt-3"> 
  <h1><%= @list.name %></h1>
   <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-ghost" %>
   <h3> Bookmarks </h3>
   <ul class="list-group mb-3">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item"><%= bookmark.movie.title %> : <%= bookmark.comment %> <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class:"btn btn-outline-secondary" %></li>
    <% end %>
  </ul>  
  
  
</div>