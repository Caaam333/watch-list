<div class="container mt-3"> 
  <h1><%= @list.name %></h1>
   <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-ghost float-right" %>
  <br>
  <h3 class="mt-5"> Bookmarks </h3>
   <ul class="row align-items-start justify-content-around mb-3">
    <% @list.bookmarks.each do |bookmark| %>
      <li><div class="row card text-center m-3" style="width: 300px;">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <%# <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> %>
              <p class="card-text"><%= bookmark.comment %></p>
              <%= link_to "Remove",
                            bookmark_path(bookmark),
                            method: :delete,
                            data: { confirm: "Are you sure?" },
                            class:"btn btn-outline-secondary" %>
            </div>
          </div>
        </li>
    <% end %>
  </ul>
</div>

